<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="right"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textStyle="bold">

            <ImageView
                android:id="@+id/banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imge"

                android:orientation="vertical" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundbutton"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="7dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/tex1"
            android:textAllCaps="false"
            android:textColor="#360101"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/fffmm1"
            android:gravity="center"
            android:text="Open App"
            android:textAllCaps="false"
            android:textColor="#fcf9f9"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:background="@drawable/fffmm2"
            android:gravity="center"
            android:shadowColor="#ff5722"
            android:text="Rate Us"
            android:textAllCaps="false"
            android:textColor="#fcf9f9"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:background="@drawable/fffmm3"
            android:gravity="center"
            android:shadowColor="#ff5722"
            android:text="Share"
            android:textAllCaps="false"
            android:textColor="#fcf9f9"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:background="@drawable/fffmm4"
            android:gravity="center"
            android:shadowColor="#ff5722"
            android:text="About Us"
            android:textAllCaps="false"
            android:textColor="#fcf9f9"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
